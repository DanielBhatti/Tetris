<Window x:Class="Tetris_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800"
>
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center" Text="Mashi Tetris" FontSize="25"/>
        <StackPanel Orientation="Horizontal">
            <Grid Name="Grid_HeldPiece"/>
            <Grid Name="Grid_Tetris" Width="5in" Height="8in"/>
        </StackPanel>
    </StackPanel>
</Window>
